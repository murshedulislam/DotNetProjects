<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - SBMS</title>


    <link href="~/Content/css/CommonStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Product Catalog
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Category Setup", "Add", "Category")</li>
                            <li>@Html.ActionLink("Product Setup", "Add", "Product")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Party
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Customer", "Add", "Customer")</li>
                            <li>@Html.ActionLink("Supplier", "Add", "Supplier")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Purchase", "Add", "Purchase")</li>
                    <li>@Html.ActionLink("Sales", "Add", "Sales")</li>
                    <li>@Html.ActionLink("Stock", "Search", "Stock")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Reporting
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Report on Sales", "Show", "Reporting")</li>
                            <li>@Html.ActionLink("Report on Purchase", "Search", "Reporting")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()


        <footer>
            <p class="panel-footer footer">copyright &copy; @DateTime.Now.Year - Developed by the Anonymous</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
