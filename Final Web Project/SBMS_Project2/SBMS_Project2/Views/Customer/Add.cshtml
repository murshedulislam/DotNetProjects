@model SBMS_Project2.Models.Models.Customer
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<h2>Add Customer</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Code</label>
                <input type="text" name="Code" class="form-control" value="" />
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="Name" class="form-control" value="" />
            </div>


            <div class="form-group">
                <label>Address</label>
                <input type="text" name="Address" class="form-control" value="" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" name="Email" class="form-control" value="" />
            </div>

            <div class="form-group">
                <label>Contact</label>
                <input type="number" name="Contact" class="form-control" value="" />
            </div>

            <div class="form-group">
                <label>LoyaltyPoint</label>
                <input type="number" name="LoyaltyPoint" class="form-control" value="" />
            </div>


            <div class="form-group">
                <input type="submit" name="submit" class="form-control btn btn-success" value="Save" />
            </div>
        </form>
    </div>


    <div class="col-md-8">
        <div class="row">
            <form action="Search" method="post">
                <div class="form-group col-md-1 col-lg-offset-5" style="padding-top:7px;">
                    <label class="col-lg-offset-10">Name</label>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" name="Name" class="form-control col-lg-offset-1" value="" placeholder="Search by name..." />
                </div>

                <div class="form-group col-md-2">
                    <input type="submit" name="submit" class="btn btn-info btn-block" value="Search" />
                </div>
            </form>
        </div>

        <div class="pre-scrollable">
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr class="">
                        <th style="position:sticky; top:0;" class="alert-danger">SL</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Code</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Name</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Address</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Email</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Contact</th>
                        <th style="position:sticky; top:0;" class="alert-danger">LoyaltyPoint</th>
                        <th style="position:sticky; top:0;" class="text-center alert-danger">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @{ var i = 1;}
                    @foreach (var customer in Model.Customers)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@customer.Code</td>
                            <td>@customer.Name</td>
                            <td class="text-center">@customer.Address</td>
                            <td>@customer.Email</td>
                            <td>@customer.Contact</td>
                            <td>@customer.LoyaltyPoint</td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = customer.ID }, new { @class = "btn btn-primary col-lg-offset-1" })
                                @Html.ActionLink("Delete", "Delete", new { id = customer.ID }, new { @class = "btn btn-warning" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

