@model SBMS_Project2.Models.Models.Customer
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<h2>Edit Customer..............................</h2>

<div class="row">
    <div class="col-md-4">
        <form action="Edit" method="post">
            <input type="hidden" name="ID" value="@Model.ID" />
            <div class="form-group">
                <label>Code</label>
                <input type="text" name="Code" class="form-control" value="@Model.Code" />
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name" />
            </div>

            <div class="form-group">
                <label>Address</label>
                <input type="text" name="Address" class="form-control" value="@Model.Address" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" name="Email" class="form-control" value="@Model.Email" />
            </div>

            <div class="form-group">
                <label>Contact</label>
                <input type="number" name="Contact" class="form-control" value="@Model.Contact" />
            </div>

            <div class="form-group">
                <label>LoyaltyPoint</label>
                <input type="number" name="LoyaltyPoint" class="form-control" value="@Model.LoyaltyPoint" />
            </div>

            <div class="form-group">
                <input type="submit" name="submit" class="form-control btn btn-success" value="Update" />
            </div>
        </form>
    </div>

</div>
