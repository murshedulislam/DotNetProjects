@model SBMS_Project2.Models.Models.Product

@{
                /**/

                ViewBag.Title = "Add";
                Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<h3 class="alert bg-primary">Save your product informations</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Code</label>
                <input type="text" name="Code" class="form-control" value="" />
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="Name" class="form-control" value="" />
            </div>
            
            <div class="form-group">
                <label>Category</label>
                <div class="row">
                    <div class=" col-md-10">
                        <select class="form-control " name="CategoryId">
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.ID">@category.Name</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-1">
                        <a href="/Category/Add" class="btn btn-default btn-group">+</a>
                    </div>
                </div>
            </div>
            
            
            
            <div class="form-group">
                <label>ReorderLevel</label>
                <input type="text" name="ReorderLevel" class="form-control" value="" />
            </div>

            <div class="form-group">
                <label>Description</label>
                <input type="text" name="Description" class="form-control" value="" />
            </div>

            <div class="form-group">
                <input type="submit" name="submit" class="form-control btn btn-success" value="Save" />
            </div>
        </form>
    </div>
    

    <div class="col-md-8">
        <div class="row">
            <form action="Search" method="post">
                <div class="form-group col-md-1 col-lg-offset-5" style="padding-top:7px;">
                    <label class="col-lg-offset-10">Name</label>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" name="Name" class="form-control col-lg-offset-1" value="" placeholder="Search by name..." />
                </div>
                
                <div class="form-group col-md-2">
                    <input type="submit" name="submit" class="btn btn-info btn-block" value="Search" />
                </div>
            </form>
        </div>
        
        <div class="pre-scrollable">
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr class="" >
                        <th style="position:sticky; top:0;" class="alert-danger">SL</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Code</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Name</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Reorder Level</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Description</th>
                        <th style="position:sticky; top:0;" class="alert-danger">Category</th>
                        <th style="position:sticky; top:0;" class="text-center alert-danger">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @{ var i = 1;}
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@product.Code</td>
                            <td>@product.Name</td>
                            <td class="text-center">@product.ReorderLevel</td>
                            <td>@product.Description</td>
                            <td>@product.Category.Name</td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = product.ID }, new { @class = "btn btn-primary col-lg-offset-1" })
                                @Html.ActionLink("Delete", "Delete", new { id = product.ID }, new { @class = "btn btn-warning" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>