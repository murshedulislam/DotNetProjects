@model SBMS_Project2.Models.Models.Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<h3 class="alert bg-primary">Save your category informations</h3>

<form action="" method="get">
    <div class="form-group col-lg-offset-10" style="padding-left:72px">
        <a href="/Product/Add" class="btn btn-default">Go to previous</a>
        @*@Html.ActionLink("Go to previous", "Add", "Product", new { @class = "btn btn-danger" })*@
    </div>
</form>

<div>
    <form method="post">
        <div class="row">
            <div class="col-md-1 col-lg-offset-3" style="padding-top:5px;">
                <label>Code</label>
            </div>

            <div class="form-group col-md-3">
                <input type="text" name="Code" class="form-control " value="" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-1 col-lg-offset-3" style="padding-top:5px;">
                <label class="">Name</label>
            </div>

            <div class="form-group col-md-3">
                <input type="text" name="Name" class="form-control " value="" />
            </div>
        </div>

        <div class="row ">
            <div class="form-group col-md-1 col-lg-offset-4">
                <input type="submit" name="submit" class="btn btn-success btn-block " value="Save" />
            </div>
        </div>
    </form>
</div>

<div>
    <form action="Search" method="post">
        <div class="row">
            <div class="form-group col-md-2">
                @*@Html.ActionLink("Add new product", "Add", "Product", new { @class = "btn btn-primary" })*@
            </div>

            <div class="col-md-1 col-lg-offset-5" style="padding-top:6px;">
                <label class="col-lg-offset-10" style="font-size:16px;">Name</label>
            </div>

            <div class="form-group col-md-3">
                <input type="text" name="Name" class="form-control col-lg-offset-1" value="@Model.Name" placeholder="Search by name..." />
            </div>

            <div class="form-group col-md-1">
                <input type="submit" name="submit" class="btn btn-info btn-block" value="Search" />
            </div>
        </div>
    </form>
</div>

